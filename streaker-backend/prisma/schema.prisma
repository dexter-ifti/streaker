generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String      @id @default(uuid())
  name                String
  username            String      @unique
  email               String      @unique
  password            String
  current_streak      Int         @default(0)
  longest_streak      Int         @default(0)
  createdAt           DateTime    @default(now()) @map("created_at")
  updatedAt           DateTime    @updatedAt @map("updated_at")
  last_activity_date  DateTime?   @db.Date
  activities          Activity[]
  goals               Goal[]
  badges              UserBadge[]

  @@map("users")
}

model Activity {
  id          String    @id @default(uuid())
  date        DateTime  @default(now()) @db.Date
  userId      String    @map("user_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  description String[]
  completed   Boolean[] @default([])
  category    String[]  @default([])
  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("activities")
}

model Feedback {
  id        String   @id @default(uuid())
  message   String
  email     String   @default("")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  resolved  Boolean  @default(false)
  type      String   @default("feedback")

  @@map("feedbacks")
}

model GoalTemplate {
  id          String     @id @default(uuid())
  name        String
  description String
  targetDays  Int
  period      GoalPeriod
  targetCount Int        @default(1)
  category    String?
  icon        String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  goals       Goal[]

  @@map("goal_templates")
}

model Goal {
  id              String         @id @default(uuid())
  name            String
  description     String?
  period          GoalPeriod
  targetCount     Int
  targetDays      Int?
  category        String?
  status          GoalStatus     @default(ACTIVE)
  startDate       DateTime       @db.Date
  endDate         DateTime?      @db.Date
  currentProgress Int            @default(0)
  userId          String         @map("user_id")
  templateId      String?        @map("template_id")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")
  progressLogs    GoalProgress[]
  template        GoalTemplate?  @relation(fields: [templateId], references: [id])
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("goals")
}

model GoalProgress {
  id            String   @id @default(uuid())
  goalId        String   @map("goal_id")
  periodStart   DateTime @db.Date
  periodEnd     DateTime @db.Date
  targetCount   Int
  achievedCount Int      @default(0)
  isCompleted   Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  goal          Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@unique([goalId, periodStart])
  @@map("goal_progress")
}

model Badge {
  id          String      @id @default(uuid())
  name        String      @unique
  description String
  icon        String
  criteria    String
  rarity      String      @default("common")
  createdAt   DateTime    @default(now()) @map("created_at")
  userBadges  UserBadge[]

  @@map("badges")
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String   @map("user_id")
  badgeId  String   @map("badge_id")
  earnedAt DateTime @default(now()) @map("earned_at")
  badge    Badge    @relation(fields: [badgeId], references: [id])
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@map("user_badges")
}

enum GoalPeriod {
  DAILY
  WEEKLY
  MONTHLY
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  FAILED
  PAUSED
}
